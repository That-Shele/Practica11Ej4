    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="gasolina.jpg"
                HeightRequest="185"
                WidthRequest="200"
                Aspect="AspectFit"
                />

            <Entry Placeholder="Ingrese la cantidad de gasolina (galones)"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="eGal"/>

            <Entry Placeholder="Ingrese el precio por litro"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="ePrecio"/>

            <Entry Placeholder="Costo total"
               HorizontalOptions="Center"
               WidthRequest="400"
               x:Name="ePago"/>
            
            <Button
                x:Name="CounterBtn"
                Text="Calcular..." 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                WidthRequest="350" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
